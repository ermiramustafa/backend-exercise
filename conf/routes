# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

#Authenticates a user and returns a token
POST     /api/mongoTest              controllers.HomeController.mongoTest(request: Request)
POST     /api/authenticate           controllers.AuthenticationController.authenticate(request: Request)

POST     /api/users           controllers.UserController.save(request: Request)
GET      /api/users           controllers.UserController.all(request: Request)
DELETE   /api/users           controllers.UserController.delete(request: Request, id:String)


#Dashboards
GET       /api/dashboard              controllers.DashboardController.all(request: Request)
#POST      /api/dashboard              controllers.DashboardController.save(request: Request)
#PUT       /api/dashboard              controllers.DashboardController.update(request: Request)
#DELETE    /api/dashboard              controllers.DashboardController.delete(request: Request, id:String)
#GET        /api/chat/:roomId           controllers.ChatController.chat(roomId: String)
